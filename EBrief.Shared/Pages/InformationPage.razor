@using EBrief.Shared.Models

<div>
    @if (Parent.ActiveDefendant?.ActiveCaseFile?.Information is not null) {
        foreach (var entry in Parent.ActiveDefendant.ActiveCaseFile.Information.Charges) {
            <div class="flex">
                <span class="pr-2">@entry.Sequence.</span>
                <div>
                @foreach (var paragraph in entry.Text.Split("\n")) {
                    <p>@paragraph</p>
                }
                </div>
            </div>
            <br />
        }
    }
    else {
        <p>Error loading information</p>
    }
</div>

@code {
    [CascadingParameter] public ICourtListPage Parent { get; set; } = default!;
}