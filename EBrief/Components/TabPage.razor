@if (Parent.ActiveTab == this) {
    <div class="px-2 flex flex-grow">
        <div class="px-2 overflow-y-auto overflow-x-hidden max-h-[85dvh] flex-grow">
            @ChildContent
        </div>
    </div>
}

@code {
    [CascadingParameter]
    public TabControl Parent { get; set; } = default!;

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public string Title { get; set; } = string.Empty;

    protected override void OnInitialized() {
        if (Parent == null) {
            throw new ArgumentException("TabPage must be used within a TabControl");
        }
        base.OnInitialized();

        Parent.AddPage(this);
    }
}
