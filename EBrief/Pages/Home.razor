@page "/"
@using EBrief.Shared.Components
@using EBrief.Shared.Models
@using System.IO

@inject IJSRuntime JSRuntime
@inject NavigationManager NavManager

<div class="h-full grid grid-rows-[1fr,_25px]">
    <div class="w-full h-full flex flex-col grow justify-center items-center">
        <div class="pb-4 text-2xl">
            <h1>Choose an option to get started</h1>
        </div>
        <div class="grid grid-cols-3 gap-3">
            <Button Variant="ButtonTypes.Add" OnClick="OpenNewCourtListDialog">
                Add New Court List
            </Button>
            <Button OnClick="OpenPreviousCourtListDialog">
                Load Previous Court List
            </Button>
            <Button Variant="ButtonTypes.Open" OnClick="LoadCourtListFromFile">
                Open Court List From File
            </Button>
        </div>

        @if (_error is not null)
        {
            <div class="pt-2 text-left">
                <p class="text-red-500">@_error</p>
            </div>
        }
    </div>


    <p class="text-right pr-2">&copy; Craig Roberts 2024</p>
</div>

<dialog id="new-court-list" @ref="NewCourtListDialog" class="p-5">
    <h3 class="text-lg text-center pb-2 underline">Select a file to load</h3>
    <div class="grid grid-cols-[0.4fr_1fr] gap-4 pt-2 w-lg max-w-lg m-auto items-center">
        <Button Variant="ButtonTypes.Submit" OnClick="SelectFile">Choose a file</Button>
        <div class="border border-black rounded-md p-1 overflow-hidden h-9">
        @if (SelectedFile is null)
        {
            <span class="font-semibold">No file selected</span>
        }
        else
        {
            <span class="font-semibold max-w- whitespace-nowrap text-clip">@Path.GetFileName(SelectedFile)</span>
        }
        </div>
    </div>
    <h3 class="text-lg text-center py-4 font-bold">OR</h3>
    <h3 class="text-lg text-center pb-2 underline">Enter details of court list</h3>
    <div class="grid grid-cols-2 gap-4">
        <div class="col-start-1 grid grid-cols-2 items-center gap-x-4">
            <label class="ml-auto">Court date: </label>
            <input type="date" @onchange="HandleSelectCourtDate" class="border border-black rounded-md p-1 disabled:bg-gray-200" disabled=@(SelectedFile != null)>
            <label class="ml-auto">Court code: </label>
            <select @onchange="HandleSelectCourt" class="border border-black p-2 rounded-md disabled:bg-gray-200" disabled=@(SelectedFile != null)>
                <option selected hidden disabled></option>
                @foreach (var courtCode in Courts.Select(c => c.CourtCode))
                {
                    <option value="@courtCode">@courtCode</option>
                }
            </select>
            <label class="ml-auto">Court room: </label>
            <select @onchange=HandleSelectCourtRoom class="border border-black p-2 rounded-md disabled:bg-gray-200" disabled="@(SelectedCourt == null)">
                @if (SelectedCourt is not null)
                {
                    <option selected hidden disabled></option>
                    foreach (var courtRoom in SelectedCourt!.CourtRooms)
                    {
                        <option value="@courtRoom">@courtRoom</option>
                    }
                }
            </select>
            <label class="ml-auto">Include documents:</label>
            <select @onchange="HandleIncludeDocuments" class="border border-black p-2 rounded-md">
                <option selected hidden disabled></option>
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>
            @* <RadzenCheckBox @bind-Value="IncludeDocuments" /> *@
        </div>
        <div class="w-full col-start-2 row-start-1">
            <textarea @bind="@CaseFileNumbers" rows="10" placeholder="Enter case file numbers here" class="w-full p-2 border border-slate-500 rounded-md resize-none disabled:bg-gray-200" disabled="@(SelectedFile != null)" />
        </div>
    </div>

        @if (_loadCourtListError is not null)
        {
            <p class="col-span-2 text-center text-lg text-red-500">@_loadCourtListError</p>
        }

        <div class="flex w-full col-span-2 justify-center gap-6">
            <Button OnClick="LoadCourtList" Disabled="_loadingCourtList">
                Confirm
            </Button>
            <Button Variant="ButtonTypes.Cancel" OnClick="CloseLoadNewCourtListDialog">
                Cancel
            </Button>
        </div>
</dialog>

<dialog @ref="PreviousCourtListDialog" class="p-5">
    <h3 class="text-lg text-center pb-2">Choose from a previous court list</h3>
    @if (PreviousCourtLists is null)
    {
        <RadzenProgressBarCircular Mode="ProgressBarMode.Indeterminate" ShowValue=false />
    }

    else
    {
        <div class="border border-black mb-2 w-[300px] h-[300px]">
            @if (PreviousCourtLists!.Count == 0)
            {
                <div class="h-full w-full flex items-center justify-center">
                    <h3 class="text-center text-lg pb-2">No court previous court lists found</h3>
                </div>
            }
            else
            {
                @foreach (var courtList in PreviousCourtLists!)
                {
                    <div class="flex justify-between border-b border-black @(courtList == SelectedCourtList ? "!bg-blue !text-primary hover:bg-blue hover:text-primary" : "")">
                        <p class="text-lg text-center p-1 hover:bg-slate-300 hover:text-black cursor-default"
                           @onclick=@(() => HandleSelectCourtListEntry(courtList))>
                            @courtList.CourtDate.ToShortDateString() - @courtList.CourtCode Court @courtList.CourtRoom
                            <CancelButton OnClick="OpenConfirmDialog" />
                        </p>
                    </div>
                }
            }
        </div>

    }
    <div class="flex w-full justify-center gap-3">
        @if (PreviousCourtLists?.Count != 0)
        {
            <Button OnClick="LoadPreviousCourtList">
                Confirm
            </Button>
            <Button Variant="ButtonTypes.Close" OnClick="OpenConfirmDialog" Disabled=@(SelectedCourtList == null)>
                Delete
            </Button>
         }
        <Button Variant="ButtonTypes.Cancel" OnClick="ClosePreviousCourtListDialog">
            Cancel
        </Button>
    </div>
</dialog>

<dialog @ref=ConfirmDialog class="p-5">
    <p class="text-lg text-center pb-2">Are you sure you want to delete this court list?</p>
    <div class="flex justify-center gap-3">
        <Button OnClick="async () => await DeletePreviousCourtList(true)">
            Yes
        </Button>
        <Button Variant="ButtonTypes.Cancel" OnClick="async () => await DeletePreviousCourtList(false)">
            No
        </Button>
    </div>
</dialog>

<dialog @ref=SelectCourtRoomDialog class="p-5">
    <p class="text-lg text-center pb-2">Select a court room</p>
    <label class="ml-auto">Court room: </label>
    <select @onchange=HandleSelectCourtRoom class="border border-black p-2 rounded-md">
            <option selected hidden disabled></option>
        @if (LandscapeList is not null)
        {
            foreach (var courtRoom in LandscapeList.Select(cl => cl.CourtRoom))
            {
                <option value="@courtRoom">@courtRoom</option>
            }
        }
    </select>

    <div class="flex justify-center gap-3">
        <Button OnClick="FetchCourtListFromLandscape">
            Confirm
        </Button>
        <Button Variant="ButtonTypes.Cancel" OnClick="CloseSelectCourtRoomDialog">
            Cancel
        </Button>
    </div>
</dialog>
